<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/history_box"
        android:layout_width="match_parent"
        android:layout_height="260sp"
        android:textColor="#5e5959"
        android:gravity="bottom|end"
        android:ellipsize="end"
        android:textSize="30sp"
        android:singleLine="true" />


    <TextView
        android:id="@+id/main_box"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:ellipsize="end"
        android:gravity="end"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_AC"
                style="@style/ActionButton"
                android:text="AC"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/btn_del"
                style="@style/ActionButton"
                android:text="⌫"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/btn_procent"
                style="@style/ActionButton"
                android:text="%"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/btn_division"
                style="@style/ActionButton"
                android:text="÷"
                android:gravity="center">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_7"
                style="@style/NumberButton"
                android:text="7"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/btn_8"
                style="@style/NumberButton"
                android:text="8"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/btn_9"
                style="@style/NumberButton"
                android:text="9"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/btn_multi"
                style="@style/ActionButton"
                android:text="×"
                android:gravity="center">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_4"
                style="@style/NumberButton"
                android:text="4"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/btn_5"
                style="@style/NumberButton"
                android:text="5"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/btn_6"
                style="@style/NumberButton"
                android:text="6"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/btn_minus"
                style="@style/ActionButton"
                android:text="-"
                android:gravity="center">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_1"
                style="@style/NumberButton"
                android:text="1"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/btn_2"
                style="@style/NumberButton"
                android:text="2"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/btn_3"
                style="@style/NumberButton"
                android:text="3"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/btn_plus"
                style="@style/ActionButton"
                android:text="+"
                android:gravity="center">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_0"
                style="@style/NumberButton"
                android:text="0"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/btn_comma"
                style="@style/NumberButton"
                android:text=","
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/btn_equal"
                style="@style/ActionButton"
                android:text="="
                android:gravity="center">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>